<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="Chi Tiết Mượn - Trả Sách"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loan_idPhieuMuon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Mã Phiếu:"
                android:textAlignment="gravity"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/loan_ngayMuon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Ngày Mượn:"
                android:textAlignment="gravity"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/loan_tenDG2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Tên Độc Giả:"
                android:textAlignment="gravity"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/loan_idDG2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Mã Độc Giả:"
                android:textAlignment="gravity"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chi_tiet_idPhieuMuon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="IDPhieuMuon"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chi_tiet_ngayMuon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Ngay Muon"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/chi_tiet_idDG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="ID DG"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chi_tiet_tenDG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="ten DG"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/chi_tiet_ds_muon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_tra_sach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Trả Sách"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>